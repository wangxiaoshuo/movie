<div class="loginView">
    <div class="login1">
        <form  class="form-horizontal" role="form" method="post" onsubmit="return false">
            <fieldset>
                <legend>登录</legend>
                <div class="panel panel-default ">
                    <div class="panel-header col-md-12">
                        <p class="p1"></p>
                    </div>
                    <div class="panel-body row">
                        <div class="form-group col-md-12">
                            <label for="" class="control-label col-md-4">用户名：</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control" placeholder="请输入用户名" id="username1">
                            </div>
                        </div>

                        <div class="form-group col-md-12">
                            <label for="" class="control-label col-md-4">密码：</label>
                            <div class="col-md-8">
                                <input type="password" class="form-control" placeholder="请输入密码" id="password1">
                            </div>

                        </div>
                        <button type="submit" class="btn btn-primary loginBtn1 col-md-3 col-md-offset-5">登录</button>
                        <a href="/register" class="register col-md-3 col-md-offset-1"><small style="color:black">我还没有账号？立即注册</small></a>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>


</div>

<script>
    $(function(){
        $(".loginBtn1").on("click",function() {
            var username = $("#username1").val();
            var password = $("#password1").val();
            var data = {"username": username, "password": password};
            $.ajax({
                url:"/touser",
                type:"post",
                data:data,
                success:function(data,status){
                    if(status == "success"){
                        location.href = "/user";
                    }
                },
                error:function(data,err){
                    alert(err);
                }
            })

        });
    })
</script>