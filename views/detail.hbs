<script>
    $(function(){
        var actor = "{{actor}}".split("，"),
                kind = "{{kind}}".split("/"),
                doctor = "{{doctor}}".split("/"),
                country = "{{country}}".split("/");
        for(var i in actor){
            $(".movieDetail ul li:nth-child(1)").append("<a href=''>"+actor[i]+'<span> / </span>'+"</a>" )
        }
        for(var i in kind){
            $(".movieDetail ul li:nth-child(2)").append("<a href=''>"+kind[i]+'<span> / </span>'+"</a>")
        }
        for(var i in country){
            $(".movieDetail ul li:nth-child(3)").append("<a href=''>"+country[i]+'<span> / </span>'+"</a>")
        }
        for(var i in doctor){
            $(".movieDetail ul li:nth-child(4)").append("<a href=''>"+doctor[i]+'<span> / </span>'+"</a>")
        }

            $(".movieDetail ul li").first().find("span").last().remove();
        $(".movieDetail ul li:nth-child(2)").find("span").last().remove();
        $(".movieDetail ul li:nth-child(3)").find("span").last().remove();
        $(".movieDetail ul li:nth-child(4)").find("span").last().remove();

        $(".playMenu ul li:nth-child(2)").css({"border-bottom":"none"});
        $(".playMenu ul li:nth-child(3)").css({"border-bottom":"1px #ddd solid"});

        $(".airUrl").css({"display":"block"}).siblings().css({"display":"none"});
        $(".star").raty().css({"margin-left":"50px"});
