            $(".playMenu ul li:nth-child(2)").css({"border-bottom":"none"});
            $(".playMenu ul li:nth-child(3)").css({"border-bottom":"1px #ddd solid"});
            $(".airUrl").css({"display":"block"}).siblings().css({"display":"none"});
        });
        $(".playMenu ul li:nth-child(3)").click(function(){
            $(".playMenu ul li:nth-child(2)").css({"border-bottom":"1px #ddd solid"});
            $(".playMenu ul li:nth-child(3)").css({"border-bottom":"none"});
            $(".baiduUrl").css({"display":"block"}).siblings().css({"display":"none"});
        });

